match_expr
         ::= 'match' no_struct_literal_expr '{' match_arm* '}'
match_arm 
         ::= attribute* match_pattern '=>' ( expr ',' | '{' block '}' )
match_pattern
         ::= pattern  ( '|' pattern )* ( "if" expr )?
attribute 
         ::= '#' '!'? '[' meta_item ']'
meta_item 
         ::= ident ( '=' literal | '(' meta_seq ')' )?
meta_seq 
         ::= meta_item ( ',' meta_seq )?